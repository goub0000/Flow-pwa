{
  "name": "flow-pwa",
  "version": "1.0.0",
  "description": "Flow - College Application Management PWA with Firebase",
  "main": "index.html",
  "scripts": {
    "start": "firebase serve --only hosting",
    "build": "echo 'Build complete - static site ready'",
    "deploy": "firebase deploy",
    "deploy:hosting": "firebase deploy --only hosting",
    "deploy:firestore": "firebase deploy --only firestore",
    "deploy:storage": "firebase deploy --only storage", 
    "emulators": "firebase emulators:start",
    "emulators:export": "firebase emulators:export ./emulator-data",
    "emulators:import": "firebase emulators:start --import=./emulator-data",
    "test": "echo 'No tests specified'",
    "lint": "echo 'No linting configured'",
    "validate": "firebase functions:shell",
    "logs": "firebase functions:log"
  },
  "keywords": [
    "firebase",
    "pwa",
    "education",
    "college-applications",
    "student-portal",
    "real-time",
    "offline-first"
  ],
  "author": "Flow Team",
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "firebase-tools": "^12.4.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/flow-pwa.git"
  },
  "homepage": "https://your-flow-app.web.app",
  "bugs": {
    "url": "https://github.com/your-org/flow-pwa/issues"
  },
  "firebase": {
    "project": "your-firebase-project-id",
    "hosting": {
      "public": ".",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ]
    }
  },
  "pwa": {
    "name": "Flow - College Applications",
    "shortName": "Flow",
    "description": "Streamline your college application process with real-time collaboration and offline support",
    "themeColor": "#373896",
    "backgroundColor": "#0a0a0a",
    "display": "standalone",
    "orientation": "portrait-primary",
    "scope": "/",
    "startUrl": "/",
    "icons": [
      {
        "src": "/assets/img/icon-72x72.png",
        "sizes": "72x72",
        "type": "image/png",
        "purpose": "any"
      },
      {
        "src": "/assets/img/icon-96x96.png", 
        "sizes": "96x96",
        "type": "image/png",
        "purpose": "any"
      },
      {
        "src": "/assets/img/icon-128x128.png",
        "sizes": "128x128", 
        "type": "image/png",
        "purpose": "any"
      },
      {
        "src": "/assets/img/icon-144x144.png",
        "sizes": "144x144",
        "type": "image/png",
        "purpose": "any"
      },
      {
        "src": "/assets/img/icon-152x152.png",
        "sizes": "152x152",
        "type": "image/png", 
        "purpose": "any"
      },
      {
        "src": "/assets/img/icon-192x192.png",
        "sizes": "192x192",
        "type": "image/png",
        "purpose": "any maskable"
      },
      {
        "src": "/assets/img/icon-384x384.png",
        "sizes": "384x384",
