{
  "name": "flow-pwa",
  "version": "1.0.0",
  "description": "Flow - College Application Management PWA with Firebase",
  "main": "index.html",
  "scripts": {
    "start": "webpack serve --mode development",
    "build": "NODE_ENV=production webpack --mode production",
    "build:dev": "NODE_ENV=development webpack --mode development",
    "build:analyze": "ANALYZE=true npm run build",
    "serve": "firebase serve --only hosting",
    "deploy": "npm run build && firebase deploy",
    "deploy:hosting": "npm run build && firebase deploy --only hosting",
    "deploy:firestore": "firebase deploy --only firestore",
    "deploy:storage": "firebase deploy --only storage",
    "emulators": "firebase emulators:start",
    "emulators:export": "firebase emulators:export ./emulator-data",
    "emulators:import": "firebase emulators:start --import=./emulator-data",
    "lint": "eslint src/**/*.{js,ts} --fix",
    "lint:css": "stylelint src/**/*.css --fix",
    "validate": "firebase functions:shell",
    "logs": "firebase functions:log",
    "clean": "rimraf dist",
    "postinstall": "husky install"
  },
  "keywords": [
    "firebase",
    "pwa",
    "education",
    "college-applications",
    "student-portal",
    "real-time",
    "offline-first"
  ],
  "author": "Flow Team",
  "license": "MIT",
  "dependencies": {
    "core-js": "^3.32.0",
    "regenerator-runtime": "^0.14.0"
  },
  "devDependencies": {
    "@babel/core": "^7.22.0",
    "@babel/preset-env": "^7.22.0",
    "@babel/preset-typescript": "^7.22.0",
    "@babel/plugin-proposal-class-properties": "^7.18.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.20.0",
    "babel-loader": "^9.1.0",
    "css-loader": "^6.8.0",
    "css-minimizer-webpack-plugin": "^5.0.0",
    "style-loader": "^3.3.0",
    "mini-css-extract-plugin": "^2.7.0",
    "postcss": "^8.4.0",
    "postcss-loader": "^7.3.0",
    "autoprefixer": "^10.4.0",
    "cssnano": "^6.0.0",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.0",
    "webpack-dev-server": "^4.15.0",
    "webpack-bundle-analyzer": "^4.9.0",
    "html-webpack-plugin": "^5.5.0",
    "copy-webpack-plugin": "^11.0.0",
    "compression-webpack-plugin": "^10.0.0",
    "terser-webpack-plugin": "^5.3.0",
    "image-minimizer-webpack-plugin": "^3.8.0",
    "imagemin": "^8.0.0",
    "imagemin-mozjpeg": "^10.0.0",
    "imagemin-pngquant": "^9.0.0",
    "imagemin-svgo": "^10.0.0",
    "imagemin-webp": "^7.0.0",
    "workbox-webpack-plugin": "^7.0.0",
    "webpack-pwa-manifest": "^4.3.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.0",
    "stylelint": "^15.10.0",
    "stylelint-config-standard": "^34.0.0",
    "husky": "^8.0.0",
    "lint-staged": "^13.2.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0",
    "firebase-tools": "^12.4.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/flow-pwa.git"
  },
  "homepage": "https://your-flow-app.web.app",
  "bugs": {
    "url": "https://github.com/your-org/flow-pwa/issues"
  },
  "firebase": {
    "project": "your-firebase-project-id",
    "hosting": {
      "public": ".",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ]
    }
  },
  "pwa": {
    "name": "Flow - College Applications",
    "shortName": "Flow",
    "description": "Streamline your college application process with real-time collaboration and offline support",
    "themeColor": "#373896",
    "backgroundColor": "#0a0a0a",
    "display": "standalone",
    "orientation": "portrait-primary",
    "scope": "/",
    "startUrl": "/",
    "icons": [
      {
        "src": "/assets/img/icon-72x72.png",
        "sizes": "72x72",
        "type": "image/png",
        "purpose": "any"
      },
      {
        "src": "/assets/img/icon-96x96.png", 
        "sizes": "96x96",
        "type": "image/png",
        "purpose": "any"
      },
      {
