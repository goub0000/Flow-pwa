# Firebase Configuration - Secure Environment Variables
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control

# Firebase API Key (keep secret)
FIREBASE_API_KEY=your_firebase_api_key_here

# Optional: Analytics opt-out for development
DISABLE_ANALYTICS=true

# Optional: Development mode flag
NODE_ENV=development

# Security settings
ENABLE_CSP=true
ENABLE_RATE_LIMITING=true

# CORS settings
ALLOWED_ORIGINS=https://flow-pwa.web.app,https://flow-pwa.firebaseapp.com,http://localhost:5000